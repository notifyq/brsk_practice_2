@model List<mvc_app.Models.Product>
    @{
    ViewData["Title"] = "Корзина";
}
<div>
    <h1>Корзина</h1>
    <p class="align-content-end"><strong>Общая цена: </strong><bold>@ViewBag.CartCost</bold> руб.</p>
</div>
    

<div class="d-flex flex-column-reverse bd-highlight">
    @foreach (var item in Model) {
        <div class="product-row">
            <div class="product-image">
                <img src="@item.MainImage" alt="Изображение">
            </div>
            <div class="product-details">
                <p style="font-size: 16px;">Название: @item.ProductName</p>
                <p style="font-size: 14px;">Описание: @item.ProductDescription</p>
                <p style="font-size: 18px;">Цена: @item.ProductPrice</p>
            </div>
            <div class="product-actions">
                <a asp-action="Delete" asp-route-product_id="@item.ProductId">Удалить</a>
            </div>
        </div>
    }
</div>

<form method="post" asp-controller="Cart" asp-action="Ordering" class="justify-content-end">
    <button class="btn-success">Оформить заказ</button>
</form>

